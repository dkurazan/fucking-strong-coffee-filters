<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    {{ 'reset.css' | asset_url | stylesheet_tag }}
    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'header.css' | asset_url | stylesheet_tag }}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="icon" href="{{ 'store-logo.png' | asset_img_url }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Hind+Vadodara:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="{{ 'slick.css' | asset_url }}"/>
    <link rel="stylesheet" type="text/css" href="{{ 'slick-theme.css' | asset_url }}"/>

    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <!-- Header hook for plugins -->

    <style>
      
      .shopify-challenge__message{
        font-family: 'Hind Vadodara';
        font-style: normal;
        font-weight: 700;
        font-size: 20px;
        line-height: 110%;
        letter-spacing: 0.09em;
        text-transform: uppercase;
        color: #333333;
        margin-top: 150px;
        margin-bottom: 50px;
      }

      .shopify-challenge__button.btn{
        border: 1px solid rgba(45, 43, 39, 1);
        padding: 22px 150px;
        font-family: 'Hind Vadodara';
        font-style: normal;
        font-weight: 400;
        font-size: 16px;
        line-height: 140%;
        display: flex;
        align-items: center;
        text-align: center;
        letter-spacing: 0.085em;
        text-transform: uppercase;
        background-color: #2D2B27;
        color: #FFFFFF;
        transition: .5s all ease-in-out;
        margin-top: 40px;
      }
    </style>
    <script src="{{ 'application.js' | asset_url }}" defer></script>
    <script src="{{ 'https://cdnjs.cloudflare.com/ajax/libs/jquery.lazyload/1.9.1/jquery.lazyload.min.js' | asset_url }}" defer></script>
  </head>
  <body>
    <header class="header">
      {% section 'header' %}
    </header>
    <main role="main">
      {{ content_for_layout }}
    </main>
    <footer class="footer">
      {% section 'footer' %}
    </footer>
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.0.min.js" ></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script type="text/javascript" src="{{ 'slick.min.js' | asset_url }}"></script>
  </body>
</html>